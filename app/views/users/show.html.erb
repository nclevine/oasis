<div class='profile'>
  <h1 class='user-fullname'><%= @user.fullname %></h1>
  <h3 class='logout'><%= link_to "Log Out", destroy_user_session_path, method: :delete %></h3>
  <% if !@user.space %>
    <button class='new-space-form-show'>Make A New Salon Wall</button>
    <div class='new-space-form'>
      <%= form_for(@space) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Call It Something Cool...' %>
        <%= f.submit %>
      <% end %>
    </div>
  <% else %>
    <h2 class='visit-salon-wall'><%= link_to "Go To Salon Wall", current_user.space %></h2>
  <% end %>
</div>